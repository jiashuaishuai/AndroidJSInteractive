<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jiashuaishuai.androidjsinteractive.MainActivity">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <Button
        android:id="@+id/appCallHtml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/webView"
        android:text="App调用Html方法" />

    <Button
        android:id="@+id/appCallHtmlParam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/appCallHtml"
        android:layout_toEndOf="@+id/appCallHtml"
        android:layout_toRightOf="@+id/appCallHtml"
        android:text="App调用Html方法传值" />

    <Button
        android:id="@+id/paramHtmlToApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appCallHtml"
        android:text="Param:Html----App" />

    <Button
        android:id="@+id/paramAppToHtml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/paramHtmlToApp"
        android:layout_alignEnd="@+id/appCallHtmlParam"
        android:layout_alignRight="@+id/appCallHtmlParam"
        android:text="Param:App----Html" />

    <Button
        android:id="@+id/my_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回传方法演示"
        android:layout_below="@+id/paramHtmlToApp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />
</RelativeLayout>
